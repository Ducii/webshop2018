@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<table id="categoriesTable" class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Naziv
            </th>
        </tr>
    </thead>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#categoriesTable').DataTable({
                "ajax": {
                    "url": "/api/Kategorije",
                    "dataSrc": ""
                },
                "columns": [
                    { 'data': 'Id' },
                    { 'data': 'Naziv' },
                ]
            } );
        });
    </script>
}
